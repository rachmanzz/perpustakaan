{
    "name": "Perpustakaan",
    "version": "1.0",
    "keywords": ["perpustakaan", "nodejs", "nestjs"],
    "repository": "https://github.com/rachmanzz/perpustakaan",
    "env": {
        "APP_BASE": {
            "required": true
        }
    }, 
    "addons": [
        {
            "plan": "heroku-postgresql:hobby-dev"
        }
    ],
    "buildpacks": [
        {
            "url": "https://github.com/lstoll/heroku-buildpack-monorepo"
        },
        {
            "url": "heroku/nodejs"
        }
    ],
    "scripts": {
        "heroku-postbuild": "npm run typeorm:migrate"
    }
}